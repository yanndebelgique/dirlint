{
  "name": "@yanneman/validate_directory_structure",
  "version": "1.1.0",
  "description": "A CLI tool to validate and lint directory structures based on configurable rules",
  "main": "bin/index.js",
  "directories": {
    "example": "examples"
  },
  "bin": {
    "dirlint": "bin/index.js"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsc -p . --outDir bin",
    "g:examples": "ts-node generate_examples_file.ts",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish --access public"
  },
  "keywords": [
    "lint",
    "directory",
    "structure",
    "validation",
    "cli",
    "filesystem",
    "architecture",
    "project-structure"
  ],
  "author": "yanneman",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yanndebelgique/dirlint.git"
  },
  "homepage": "https://github.com/yanndebelgique/dirlint#readme",
  "bugs": {
    "url": "https://github.com/yanndebelgique/dirlint/issues"
  },
  "dependencies": {
    "@types/yargs": "^17.0.12",
    "js-yaml": "^4.1.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "typescript": "^5.9.3"
  }
}
